<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/orange"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/food_bag_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/default_broken_image"
            android:padding="5dp"
            android:elevation="10dp"/>
        <RelativeLayout
            android:id="@+id/food_detail_price_cal"
            android:background="@drawable/border_background"
            android:layout_toEndOf="@id/food_bag_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/food_detail_minus_btn"
                android:layout_alignParentEnd="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/square_minus"
                android:elevation="10dp"/>

            <ImageButton
                android:id="@+id/food_detail_plus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/square_plus"
                android:elevation="10dp"/>
            <TextView
                android:id="@+id/food_detail_quatity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:layout_toEndOf="@id/food_detail_plus_btn"
                android:layout_toStartOf="@id/food_detail_minus_btn"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_toLeftOf="@id/food_detail_minus_btn"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/food_detail_price"
            android:layout_below="@id/food_detail_price_cal"
            android:layout_toEndOf="@id/food_bag_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_background"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>