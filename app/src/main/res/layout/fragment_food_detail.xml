<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fooddetail.FoodDetailFragment"
    android:padding="10dp"
    android:background="@color/orange">
    <ImageView
        android:id="@+id/food_detail_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/default_broken_image"
        android:scaleType="centerCrop"
        android:background="@color/white"/>
    <ImageButton
        android:id="@+id/Back_btn"
        style="@style/option_button"
        android:src="@drawable/baseline_turn_back"
        android:elevation="10dp"
        android:background="@drawable/rough_button"/>
    <ImageButton
        android:id="@+id/shopping_bag_btn"
        style="@style/option_button"
        android:src="@drawable/shopping"
        android:elevation="10dp"
        android:background="@drawable/rough_button"
        android:layout_alignParentRight="true"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="25dp"
        android:outlineSpotShadowColor="@color/white"
        android:clickable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:elevation="10dp">
            <TextView
                android:id="@+id/food_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food name"
                android:textSize="30dp"
                android:maxLines="2"
                android:elevation="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/food_detail_size"
                android:layout_below="@id/food_detail_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:nestedScrollingEnabled="false"/>
            <RelativeLayout
                android:id="@+id/food_detail_price_cal"
                android:layout_above="@id/food_detail_agreement_btn"
                android:background="@drawable/border_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/food_detail_minus_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/white"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/square_minus"
                    android:elevation="10dp"/>

                <ImageButton
                    android:id="@+id/food_detail_plus_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toLeftOf="@id/food_detail_quatity"
                    android:backgroundTint="@color/white"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/square_plus"
                    android:elevation="10dp"/>
                <TextView
                    android:id="@+id/food_detail_quatity"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:layout_toLeftOf="@id/food_detail_minus_btn"/>
                <TextView
                    android:id="@+id/food_detail_price"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_toLeftOf="@id/food_detail_plus_btn"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/food_detail_agreement_btn"
                style="@style/big_button"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rough_button"
                android:elevation="10dp"
                android:text="@string/agree_btn" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>