<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/purchase_food_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/purchase_delete_btn"
            android:layout_marginEnd="10dp"
            android:maxHeight="50dp"
            android:text="Food name and size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <RelativeLayout
            android:id="@+id/food_detail_price_cal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/purchase_minus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/square_minus"
                android:elevation="10dp"/>

            <ImageButton
                android:id="@+id/purchase_plus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toLeftOf="@id/purchase_quantity"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/square_plus"
                android:elevation="10dp"/>
            <TextView
                android:id="@+id/purchase_quantity"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="0"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_toLeftOf="@id/purchase_minus_btn"/>
            <TextView
                android:id="@+id/purchase_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_toLeftOf="@id/purchase_plus_btn"
                android:textAlignment="textEnd"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/purchase_delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>